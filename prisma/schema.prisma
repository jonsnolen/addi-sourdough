// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  name      String?
  role      String   @default("customer") // "customer" | "admin"
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders        Order[]
  subscriptions Subscription[]
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  imageUrl    String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  batches       Batch[]
  orderItems    OrderItem[]
  subscriptions Subscription[]
}

model Batch {
  id                 String   @id @default(cuid())
  productId          String
  batchDate          DateTime @db.Date
  quantityAvailable  Int
  quantitySold       Int      @default(0)
  subscriptionCap    Int?     // Optional max reserved for subscriptions
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  product         Product          @relation(fields: [productId], references: [id], onDelete: Cascade)
  orderItems      OrderItem[]
  subscriptionOrders SubscriptionOrder[]

  @@unique([productId, batchDate])
  @@index([batchDate])
}

model Order {
  id                   String   @id @default(cuid())
  userId               String
  status               String   @default("pending") // pending | paid | fulfilled | cancelled
  total                Decimal  @db.Decimal(10, 2)
  deliveryDate         DateTime @db.Date
  stripePaymentIntentId String?
  stripeCheckoutSessionId String?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user   User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items  OrderItem[]
  subscriptionOrders SubscriptionOrder[]
}

model OrderItem {
  id             String   @id @default(cuid())
  orderId        String
  batchId        String
  productId      String
  quantity       Int
  priceAtPurchase Decimal @db.Decimal(10, 2)
  createdAt      DateTime @default(now())

  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  batch   Batch  @relation(fields: [batchId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([batchId])
}

enum SubscriptionFrequency {
  weekly
  biweekly
  monthly
}

model Subscription {
  id                    String   @id @default(cuid())
  userId                String
  productId             String
  quantity              Int
  frequency             SubscriptionFrequency
  nextDeliveryDate      DateTime @db.Date
  stripeCustomerId      String?
  stripePaymentMethodId String?
  isActive              Boolean  @default(true)
  failedPaymentCount    Int      @default(0)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  subscriptionOrders SubscriptionOrder[]
}

model SubscriptionOrder {
  id             String   @id @default(cuid())
  subscriptionId String
  orderId        String
  batchId        String
  status         String   @default("created") // created | charged | fulfilled
  createdAt      DateTime @default(now())

  subscription Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  order        Order        @relation(fields: [orderId], references: [id], onDelete: Cascade)
  batch        Batch        @relation(fields: [batchId], references: [id], onDelete: Cascade)

  @@unique([subscriptionId, batchId])
  @@index([subscriptionId])
}
